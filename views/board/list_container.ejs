<main class="container my-3">
    <h1 class="p-4 text-white text-center rounded board-banner">게시판</h1>
    <div class="card my-3">
        <div class="card-body">
            <div class="form-row justify-content-end mb-2">
                <div class="col-auto">
                    <select class="form-control col" name="year" id="year">
                        <option value="-전체검색-" selected="">전체검색</option>
                        <option value="제목">제목</option>
                        <option value="작성자">작성자</option>
                    </select>
                </div>
                <div class="col-auto">
                    <input type="text" class="form-control col" name="text">
                </div>
                <div class="col-auto">
                    <button type="button" class="btn btn-ss-dark-blue" name="검색">검색</button>
                </div>
            </div>

            <table class="table table-hover text-center">
                <thead class="thead-ss-light">
                    <tr>
                        <th>제목</th>
                        <th>작성자</th>
                        <th>작성일</th>
                        <th>조회수</th>
                    </tr>
                </thead>
                <tbody>
                <% posts.forEach(post => { %>
                    <tr>
                        <td><a style="color: black;" href="http://localhost:3000/board/show?post_id=<%= post._id%>"><%= post.title %></a></td>
                        <td><%= post.writer.nick_name %></td>
                        <td><%= post.created_at.toLocaleDateString('ko-KR', { timeZone: 'UTC' }) %></td>
                        <td><%= post.hits %></td>
                    </tr>
                <%  }); %>
                </tbody>
            </table>

            <div class="form-group">
                <div class="form-row justify-content-end">
                    <div class="col-auto">
                        <a type="button" class="btn btn-outline-ss-medium-blue" href="/board/write">글쓰기</a>
                    </div>
                </div>
            </div>

            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-center mb-0">
                    <li class="page-item"><a class="page-link" href="http://localhost:3000/">Previous</a></li>
                    <li class="page-item"><a class="page-link" href="http://localhost:3000/board">1</a></li>
                    <li class="page-item"><a class="page-link" href="http://localhost:3000/board">2</a></li>
                    <li class="page-item"><a class="page-link" href="http://localhost:3000/board">3</a></li>
                    <li class="page-item"><a class="page-link" href="http://localhost:3000/board">4</a></li>
                    <li class="page-item"><a class="page-link" href="http://localhost:3000/board">5</a></li>
                    <li class="page-item"><a class="page-link" href="http://localhost:3000/board">Next</a></li>
                </ul>
            </nav>
        </div>
    </div>
</main>